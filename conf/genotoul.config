//Profile config names for nf-core/configs
params {
    config_profile_description = 'The Genotoul cluster profile'
    config_profile_contact     = 'support.bioinfo.genotoul@inrae.fr'
    config_profile_url         = 'http://bioinfo.genotoul.fr/'
}

singularity {
    // need one image per execution
    enabled    = true
    runOptions = '-B /work -B /save -BÂ /bank -B /home -B /usr/local/bioinfo'
}

process {
    resourceLimits = [
        memory: 3500.GB,
        cpus: 48,
        time: 30.d
    ]
    executor = 'slurm'
    queue = {task.time <= 96.h ? 'workq' : 'unlimitq'}
}

params {
    save_reference  = true
    igenomes_ignore = true
    igenomesIgnore  = true
    //deprecated
    // Max resources requested by a normal node on genotoul.
    max_memory      = 3500.GB
    max_cpus        = 48
    max_time        = 30.d
}
